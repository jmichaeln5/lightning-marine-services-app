<div class="container">
  <h1>Vendors</h1>
  <br>
</div>

<div class="container">
  <%#= link_to 'New Vendor', new_user_vendor_path(current_user), class:"btn btn-success btn-lg btn-block" %>
</div>

<br>

<% @vendors.each do |vendor| %>

<div class="flex items-center justify-center">
	<div class="container">
		<table class="w-full flex flex-row flex-no-wrap sm:bg-white rounded-lg overflow-hidden sm:shadow-lg my-1">
			<thead class="text-white">
				<tr class="bg-teal-400 flex flex-col flex-no wrap sm:table-row rounded-l-lg sm:rounded-none mb-2 sm:mb-0">
					<th class="p-3 text-left">Name</th>
          <th class="p-3 text-left">PO number</th>
          <th class="p-3 text-left">Distributed By</th>
          <th class="p-3 text-left">Date Recieved</th>
          <th class="p-3 text-left">Date Delivered</th>
					<th class="p-3 text-left" width="110px">Actions</th>
				</tr>
			</thead>
			<tbody class="flex-1 sm:flex-none">


				<tr class="flex flex-col flex-no wrap sm:table-row mb-2 sm:mb-0 bg-gray-100"">

          <td class="border-grey-light border hover:bg-gray-100 p-3"><%= link_to "#{vendor.name}", vendor %></td>
          <td class="border-grey-light border hover:bg-gray-100 p-3"><%= vendor.po_number %></td>
          <td class="border-grey-light border hover:bg-gray-100 p-3"><%= vendor.distributed_by %></td>

          <td class="border-grey-light border hover:bg-gray-100 p-3">
            <%#= vendor.date_recieved %>
            <%= "#{vendor.date_recieved.strftime("%m-%d-%y")}" %>

          </td>

          <td class="border-grey-light border hover:bg-gray-100 p-3">
            <%= "#{vendor.date_delivered.strftime("%m-%d-%y")}" %>

          </td>

					<td class="border-grey-light border hover:bg-gray-100 p-3 text-red-400 hover:text-red-600 hover:font-medium cursor-pointer">
            <%= link_to 'Delete', vendor, method: :delete, data: { confirm: 'Are you sure? Once deleted you will never be able to recover this data.' } %>
          </td>

				</tr>

        <% end %>

			</tbody>
		</table>
	</div>
</div>

<style>
  html,
  body {
    height: 100%;
  }

  @media (min-width: 640px) {
    table {
      display: inline-table !important;
    }

    thead tr:not(:first-child) {
      display: none;
    }
  }

  td:not(:last-child) {
    border-bottom: 0;
  }

  th:not(:last-child) {
    border-bottom: 2px solid rgba(0, 0, 0, .1);
  }
</style>
